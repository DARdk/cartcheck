# ==============================================================================
# CartChef Frontend - Next.js Application Environment Configuration
# ==============================================================================
# Copy this file to .env.local and fill in the required values

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
NEXT_PUBLIC_APP_NAME=CartChef
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_DESCRIPTION="Smart meal planning and grocery automation"

# Environment
NEXT_PUBLIC_NODE_ENV=development

# ==============================================================================
# API ENDPOINTS
# ==============================================================================
# Backend API
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# MCP Server (if direct access needed)
NEXT_PUBLIC_MCP_SERVER_URL=http://localhost:3001

# WebSocket connections
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# ==============================================================================
# FIREBASE CLIENT CONFIGURATION
# ==============================================================================
# Firebase Web App Config (these are safe to be public)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=cartchef-dev.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=cartchef-dev
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=cartchef-dev.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Firebase Emulator settings (development only)
NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
NEXT_PUBLIC_FIRESTORE_EMULATOR_HOST=localhost:8080

# Enable emulators in development
NEXT_PUBLIC_USE_FIREBASE_EMULATORS=true

# ==============================================================================
# AUTHENTICATION CONFIGURATION
# ==============================================================================
# JWT settings for client-side token handling
NEXT_PUBLIC_TOKEN_STORAGE_KEY=cartchef_auth_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=cartchef_refresh_token
NEXT_PUBLIC_USER_DATA_KEY=cartchef_user_data

# Session timeout (in milliseconds)
NEXT_PUBLIC_SESSION_TIMEOUT=1800000  # 30 minutes
NEXT_PUBLIC_TOKEN_REFRESH_THRESHOLD=300000  # 5 minutes before expiry

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_RECIPE_URL_PARSING=true
NEXT_PUBLIC_ENABLE_PANTRY_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_MEAL_PLANNING=true
NEXT_PUBLIC_ENABLE_SHOPPING_LIST=true
NEXT_PUBLIC_ENABLE_NEMLIG_INTEGRATION=true
NEXT_PUBLIC_ENABLE_CHROME_EXTENSION=false

# Beta features
NEXT_PUBLIC_ENABLE_AI_SUGGESTIONS=true
NEXT_PUBLIC_ENABLE_SMART_SUBSTITUTIONS=false
NEXT_PUBLIC_ENABLE_VOICE_INPUT=false

# ==============================================================================
# UI/UX CONFIGURATION
# ==============================================================================
# Theme settings
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Language and localization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=["en", "da"]

# Layout preferences
NEXT_PUBLIC_DEFAULT_ITEMS_PER_PAGE=20
NEXT_PUBLIC_MAX_RECIPES_PER_WEEK=21

# ==============================================================================
# ANALYTICS & TRACKING
# ==============================================================================
# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Privacy settings
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_PRIVACY_MODE=strict

# ==============================================================================
# PERFORMANCE SETTINGS
# ==============================================================================
# Image optimization
NEXT_PUBLIC_IMAGE_DOMAINS=["localhost", "cartchef.app", "nemlig.com"]
NEXT_PUBLIC_IMAGE_QUALITY=85
NEXT_PUBLIC_ENABLE_IMAGE_LAZY_LOADING=true

# Caching
NEXT_PUBLIC_CACHE_RECIPES=true
NEXT_PUBLIC_CACHE_USER_PREFERENCES=true
NEXT_PUBLIC_CACHE_TTL=300000  # 5 minutes

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================
# Development tools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
NEXT_PUBLIC_SHOW_DEBUG_INFO=false
NEXT_PUBLIC_ENABLE_MOCK_DATA=false

# Hot reload and debugging
NEXT_PUBLIC_ENABLE_REACT_STRICT_MODE=true

# ==============================================================================
# EXTERNAL INTEGRATIONS
# ==============================================================================
# Recipe parsing services
NEXT_PUBLIC_ENABLE_RECIPE_SCRAPING=true
NEXT_PUBLIC_RECIPE_TIMEOUT=10000

# Map services (for store locations, future feature)
NEXT_PUBLIC_MAPS_API_KEY=your-maps-api-key

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================
# Content Security Policy
NEXT_PUBLIC_CSP_REPORT_URI=/api/csp-report

# CSRF protection
NEXT_PUBLIC_CSRF_TOKEN_HEADER=X-CSRF-Token

# ==============================================================================
# ERROR HANDLING
# ==============================================================================
# Error boundaries and reporting
NEXT_PUBLIC_ENABLE_ERROR_BOUNDARY=true
NEXT_PUBLIC_ERROR_RETRY_ATTEMPTS=3

# User-friendly error messages
NEXT_PUBLIC_SHOW_DETAILED_ERRORS=false

# ==============================================================================
# BROWSER STORAGE
# ==============================================================================
# Local storage keys
NEXT_PUBLIC_STORAGE_PREFIX=cartchef_
NEXT_PUBLIC_MAX_STORAGE_SIZE=5242880  # 5MB

# Cookie settings
NEXT_PUBLIC_COOKIE_CONSENT_NAME=cartchef_consent
NEXT_PUBLIC_COOKIE_SECURE=false  # Set to true in production with HTTPS

# ==============================================================================
# SOCIAL FEATURES (Future)
# ==============================================================================
# Social sharing
NEXT_PUBLIC_ENABLE_RECIPE_SHARING=false
NEXT_PUBLIC_SHARE_BASE_URL=https://cartchef.app

# ==============================================================================
# TESTING CONFIGURATION
# ==============================================================================
# Test identifiers for E2E testing
NEXT_PUBLIC_TEST_MODE=false
NEXT_PUBLIC_TEST_DATA_ATTRIBUTES=false

# ==============================================================================
# Build Configuration
# ==============================================================================
# Next.js build settings
ANALYZE=false
BUNDLE_ANALYZER=false

# Source maps in production
NEXT_PUBLIC_SOURCE_MAPS=false