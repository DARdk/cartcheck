# ==============================================================================
# CartChef - Main Environment Configuration Template
# ==============================================================================
# Copy this file to .env and fill in the required values
# This file contains shared environment variables for all services

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
NODE_ENV=development
APP_NAME=CartChef
APP_VERSION=0.1.0

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# PostgreSQL with pgvector for semantic memory
DATABASE_URL=postgresql://username:password@localhost:5432/cartchef
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cartchef
DATABASE_USER=username
DATABASE_PASSWORD=password

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================================================
# FIREBASE CONFIGURATION
# ==============================================================================
# Firebase Project Settings
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-@your-project-id.iam.gserviceaccount.com
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Emulator Settings (for development)
FIREBASE_EMULATOR_HOST=localhost
FIREBASE_AUTH_EMULATOR_PORT=9099
FIRESTORE_EMULATOR_PORT=8080

# ==============================================================================
# API ENDPOINTS
# ==============================================================================
# Backend API
API_BASE_URL=http://localhost:8000
API_VERSION=v1

# MCP Server for Nemlig integration
MCP_SERVER_URL=http://localhost:3001

# Frontend Application
FRONTEND_URL=http://localhost:3000

# ==============================================================================
# NEMLIG.COM INTEGRATION
# ==============================================================================
# Nemlig API credentials and settings
NEMLIG_API_BASE_URL=https://api.nemlig.com
NEMLIG_USERNAME=your-nemlig-email@example.com
NEMLIG_PASSWORD=your-nemlig-password
NEMLIG_SESSION_TIMEOUT=3600

# Rate limiting for API calls
NEMLIG_RATE_LIMIT_REQUESTS=60
NEMLIG_RATE_LIMIT_WINDOW=60000

# ==============================================================================
# AGNO AGENT CONFIGURATION
# ==============================================================================
# AI Model Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Alternative AI providers
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Vector embeddings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================
# JWT tokens
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=24h

# Session security
SESSION_SECRET=your-session-secret-key-change-this-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# ==============================================================================
# LOGGING AND MONITORING
# ==============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# External monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key

# ==============================================================================
# CLOUD SERVICES (PRODUCTION)
# ==============================================================================
# Google Cloud Platform
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Cloud SQL (Production)
CLOUD_SQL_CONNECTION_NAME=project:region:instance

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================
# Hot reload and debugging
ENABLE_HOT_RELOAD=true
DEBUG_MODE=true
VERBOSE_LOGGING=false

# Local file storage paths
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
LOG_DIR=./logs

# ==============================================================================
# CHROME EXTENSION SETTINGS
# ==============================================================================
EXTENSION_API_KEY=your-extension-api-key
EXTENSION_WEBHOOK_URL=http://localhost:8000/api/v1/webhooks/extension